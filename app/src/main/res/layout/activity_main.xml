<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kyriakosalexandrou.fuse_test_v11.MainActivity">

    <EditText
        android:id="@+id/company_name_user_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/company_name_user_input_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:text="" />

    <ImageView
        android:id="@+id/company_image"
        android:layout_width="@dimen/company_image_size"
        android:layout_height="@dimen/company_image_size"
        android:layout_below="@id/company_name_user_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/company_image_top_margin"
        android:visibility="invisible"
        tools:src="@android:color/holo_orange_dark"
        tools:visibility="visible" />

</RelativeLayout>
