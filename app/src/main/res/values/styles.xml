<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fuse_bg</item>
        <item name="colorPrimaryDark">@color/fuse_bg_light</item>
        <item name="colorAccent">@color/fuse_bg_light</item>
    </style>

    <style name="main_activity_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/main_activity_parent_margin</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="progress_bar_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="progress_bar_small" parent="android:Widget.DeviceDefault.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="progress_bar_large" parent="android:Widget.DeviceDefault.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="progress_bar_full_screen" parent="android:Widget.DeviceDefault.ProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">visible</item>
    </style>


</resources>
